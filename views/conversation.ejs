<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Conversation</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .message {
      margin-bottom: 15px;
    }
    .message .sender {
      font-weight: bold;
    }
    .message .content {
      margin-left: 10px;
    }
    .chat-box {
      height: 400px;
      overflow-y: auto;
      margin-bottom: 15px;
      border: 1px solid #ccc;
      padding: 10px;
    }
  </style>
</head>
<body>
  <!-- Sidebar -->
  <%- include('partials/sidebar') %>

  <!-- Main Content -->
  <div class="content">
    <div class="container mt-4">
      <h1>Conversation avec <%= conversation.User1.id === userId ? conversation.User2.name : conversation.User1.name %></h1>

      <!-- Messages -->
      <div class="chat-box" id="chatBox">
        <% if (conversation.Messages.length > 0) { %>
          <% conversation.Messages.forEach(message => { %>
            <div class="message">
              <span class="sender">
                <%= message.User.id === userId ? 'Vous' : message.User.name %>:
              </span>
              <span class="content"><%= message.content %></span>
            </div>
          <% }) %>
          <!-- Ancre pour scroller jusqu'au dernier message -->
          <div id="lastMessage"></div>
        <% } else { %>
          <p>Aucun message dans cette conversation.</p>
        <% } %>
      </div>

      <!-- Formulaire pour envoyer un message -->
      <form action="/conversations/<%= conversation.id %>/messages" method="POST">
        <div class="mb-3">
          <textarea class="form-control" name="content" rows="3" placeholder="Tapez votre message..." required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Envoyer</button>
      </form>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Scroller vers le bas de la bo√Æte de chat
    const chatBox = document.getElementById('chatBox');
    const lastMessage = document.getElementById('lastMessage');
    if (lastMessage) {
      lastMessage.scrollIntoView({ behavior: 'smooth' });
    }
  </script>
</body>
</html>
